@model IEnumerable<AeC.Models.Endereco>

<div class="row">
    <div class="col-12 mb-3">
        <h2 class="my-4">Lista de Endereços</h2>

    </div>
</div>
@if (ViewBag.UserName != null)
{
    <div class="alert alert-info">
        Bem-vindo, @ViewBag.UserName!
    </div>
}
<div class="row">
    <div class="col-6">
        <a href="@Url.Action("Create", "Enderecos")" class="btn btn-primary mb-3">Adicionar Novo Endereço</a>
    </div>
    <div class="col-6 text-right">
        <a href="@Url.Action("ExportarCSV", "Enderecos")" class="btn btn-primary mb-3">Exportar Endereços para CSV</a>
        <a href="@Url.Action("Logout", "Account")" class="btn btn-danger mb-3">Sair</a>
    </div>
</div>


<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>CEP</th>
                    <th>Logradouro</th>
                    <th>Bairro</th>
                    <th>Cidade</th>
                    <th>UF</th>
                    <th>Número</th>
                    <th>Complemento</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var endereco in Model)
                {
                    <tr>
                        <td>@endereco.Cep</td>
                        <td>@endereco.Logradouro</td>
                        <td>@endereco.Bairro</td>
                        <td>@endereco.Cidade</td>
                        <td>@endereco.Uf</td>
                        <td>@endereco.Numero</td>
                        <td>@endereco.Complemento</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = endereco.Id })" class="btn btn-warning btn-sm">Editar</a>
                            <a href="@Url.Action("Delete", new { id = endereco.Id })" class="btn btn-danger btn-sm">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
